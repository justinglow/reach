<h1><%= link_to 'Networks', networks_path %></h1>
<ul>
<% @networks.each do |network| %>
  <li><%= link_to network.name, network %></li>
<% end %>
</ul>

<h1><%= link_to 'Sites', sites %></h1>
<ul>
<% @sites.each do |site| %>
  <li><%= link_to site.name, site %> (Network: <%= site.network.name %>)</li>
<% end %>
</ul>

<h1><%= link_to 'Users', users_path %></h1>
<ul>
<% @users.each do |user| %>
  <li><%= link_to user.name, user %> (<%= user.twitter_follower_count %> followers)</li>
<% end %>
</ul>